<% posts.each do |post| %> 
  <div class="row main">
    <div class="col-md-12" id="<%=post.name %>">

      <div class="row">
        <div class="col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1 title">
          <h1><%=post.title %></h1>
        </div>
      </div>

      <% unless post.content.nil? %>
        <div class="row">

          <% if post.content.is_a? Array %>
            <div class="content col-md-6 col-sm-10 col-xs-12 col-lg-3
                        col-md-offset-5 col-lg-offset-8 col-sm-offset-1">

              <% post.content.each do |skill| %>
                <div class="row">
                  <div class="name col-md-6"><%=skill.name %></div>
                  <div class="level col-md-6">
                    <div class="progress progress-striped">
                      <div class="bar" style="width: <%=skill.level %>%"></div>
                    </div>
                  </div>
                </div>
              <% end %>

            </div>
          <% else %>
            <div class="content col-md-6 col-sm-10 col-xs-12 col-lg-3 
                        col-md-offset-1 col-sm-offset-1">
              <div class="row">
                <div class="col-md-12"><%=post.content %></div>
              </div>

              <% if post.name == 'contact' %>
                <div class="row">
                  <ul class="social-links col-md-12">

                    <% socials.each do |social| %>
                      <li><a href="<%=social.link %>"
                             class="<%=social.name %>"
                             target="_blank"></a></li>
                    <% end %>

                  </ul>
                </div>
              <% end %>

            </div>
          <% end %>

        </div>
      <% end %>

    </div>
  </div>
<% end %>
